{
  "manifest_version": 3,
  "name": "Cistercian Clock",
  "description": "A simple Cistercian clock",
  "version": "1.0",
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_icon": {
      "16": "images/default/icon-16.png",
      "32": "images/default/icon-32.png",
      "48": "images/default/icon-48.png",
      "128": "images/default/icon-128.png"
    }
  },
  "permissions": ["activeTab", "scripting", "storage"],
  "icons": {
    "16": "images/default/icon-16.png",
    "32": "images/default/icon-32.png",
    "48": "images/default/icon-48.png",
    "128": "images/default/icon-128.png"
  },
  "commands": {
    "_execute_action": {
      "suggested_key": {
        "default": "Ctrl+B",
        "mac": "Command+B"
      }
    }
  },
  "web_accessible_resources": [
    {
      "resources": ["widget.html", "widget.css", "clock.js"],
      "matches": ["<all_urls>"]
    }
  ]


}
